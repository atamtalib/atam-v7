<script type="text/javascript">
	var ccmaths = parseFloat(prompt("control continu math :"));
    
	var cfmaths = parseFloat(prompt("control final :"));
    var coefmaths = parseFloat(prompt("coefficient math :"));
    
    var ccphy = parseFloat(prompt("control continu physique:"));
    
	var cfphy = parseFloat(prompt("control final :"));
var coefphy = parseFloat(prompt("coefficient physique :"));

	var ccsport = parseFloat(prompt("control continu sport :"));
    
	var cfsport = parseFloat(prompt("control final :"));
    var coefsport = parseFloat(prompt("coefficient sport :"));
    var sommecoef = coefmaths+coefsport+coefphy;
    	var method = parseFloat(prompt("tapez 1 pour 67%33% ou 2 pour 60%40%  :"));
    	if (method=1) {
var moymaths = parseFloat(((ccmaths+cfmaths*2)/3).toFixed(2));
var moyphy = parseFloat(((ccphy+cfphy*2)/3).toFixed(2));
var moysport = parseFloat(((ccsport+cfsport*2)/3).toFixed(2));
}
if (method=2)   {
	var moymaths = parseFloat(((ccmaths*2+cfmaths*3)/5).toFixed(2));
var moyphy = parseFloat(((ccphy*2+cfphy*3)/5).toFixed(2));
var moysport = parseFloat(((ccsport*2+cfsport*3)/5).toFixed(2));
}
var moygen = ((moyphy*coefphy)+(moysport*coefsport)+(moymaths*coefmaths))/sommecoef;
   var moygen =parseFloat(moygen.toFixed(2));
    		
    			 
    		 

</script>
